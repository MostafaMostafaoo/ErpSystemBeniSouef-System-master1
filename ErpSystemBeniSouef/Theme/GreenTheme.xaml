 
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="BackgroundColor">#658f53</SolidColorBrush>
    <!-- Light green background -->
    <SolidColorBrush x:Key="ButtonColor">#64c567</SolidColorBrush> 
    <!-- Primary green button color -->
    <SolidColorBrush x:Key="ButtonHoverColor">#183af0</SolidColorBrush>
    <!-- Darker green for hover effect -->
    <SolidColorBrush x:Key="ButtonSelectedColor">#2c6c2f</SolidColorBrush>
    <!-- Even darker green for selected state -->
    <SolidColorBrush x:Key="InputColor">#a5d6a7</SolidColorBrush>
    <!-- Lighter green for input fields -->
    <SolidColorBrush x:Key="SelectedColor">#4caf50</SolidColorBrush>
    <!-- Same as ButtonColor for consistency -->
    <SolidColorBrush x:Key="TextColor">#000000</SolidColorBrush>
    <!-- Dark green for text -->
    <SolidColorBrush x:Key="BorderColor">#999999</SolidColorBrush>
    <!-- Very light green for borders -->
    <SolidColorBrush x:Key="BlackColor">#503e3e</SolidColorBrush>
    <!-- Deep green for accents -->

</ResourceDictionary>
