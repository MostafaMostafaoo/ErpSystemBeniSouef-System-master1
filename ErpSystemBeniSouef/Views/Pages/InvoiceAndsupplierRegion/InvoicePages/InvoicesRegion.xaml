<Page x:Class="ErpSystemBeniSouef.Views.Pages.InvoiceAndsupplierRegion.InvoicePages.InvoicesRegion"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ErpSystemBeniSouef.Views.Pages.InvoiceAndsupplierRegion.InvoicePages"
      xmlns:userControls="clr-namespace:ErpSystemBeniSouef.Views.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InvoicesRegion">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../../../Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="../../../../Styles/TextBoxStyles.xaml"/>
                <ResourceDictionary Source="../../../../Styles/TextBlockStyles.xaml"/>
                <ResourceDictionary Source="../../../../Styles/TableStyles.xaml"/>
                <ResourceDictionary Source="../../../../Styles/BorderStyles.xaml"/>

                <ResourceDictionary Source="../../../../Styles/BorderStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <FontFamily x:Key="MainFont">pack://application:,,,/Assets/#Roboto</FontFamily>
            <BooleanToVisibilityConverter x:Key="BoolToVis" />
            <BooleanToVisibilityConverter x:Key="StringIsNullOrEmptyToVisibilityConverter" />
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition Height="5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <userControls:TitleBar/>

        <!-- Navigation Buttons -->
        <StackPanel  Margin="0 120 0 0"  Orientation="Vertical" Grid.Row="1"  >
            <Button Content=" فواتير كاش" Style="{StaticResource DefaultButtonStyle}"  Click="Cashinvoice_Click"/>
            <Button Content=" فواتير اجل " Style="{StaticResource DefaultButtonStyle}" Click="Dueinvoice_Click"/>
            <Button Content=" ارجاع للمورد   " Style="{StaticResource DefaultButtonStyle}"  Click="Return_to_supplier_Click"/>
            <Button Content=" تلف" Style="{StaticResource DefaultButtonStyle}" Click="ruin_Click" />

        </StackPanel>

        <Button Grid.Row="2" HorizontalAlignment="Left"  
Content="↩" FontSize="44" Width="150" Height="60" Foreground="White"
              Style="{StaticResource triggerrr}"
Margin="21,0,0,1"  
Click="BackBtn_Click"/>



    </Grid>
</Page>
