<Page x:Class="ErpSystemBeniSouef.Views.Pages.Regions.MainRegionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      xmlns:userControls="clr-namespace:ErpSystemBeniSouef.Views.UserControls"
    
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ErpSystemBeniSouef.Views.Pages.Products"
      mc:Ignorable="d" 
      d:DesignHeight="950" d:DesignWidth="1200"
      Title="Main Region Page">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../../Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="../../../Styles/TextBoxStyles.xaml"/>
                <ResourceDictionary Source="../../../Styles/TextBlockStyles.xaml"/>
                <ResourceDictionary Source="../../../Styles/TableStyles.xaml"/>
                <ResourceDictionary Source="../../../Styles/BorderStyles.xaml"/>

                <ResourceDictionary Source="../../../Styles/BorderStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <FontFamily x:Key="MainFont">pack://application:,,,/Assets/#Roboto</FontFamily>
            <BooleanToVisibilityConverter x:Key="BoolToVis" />
            <BooleanToVisibilityConverter x:Key="StringIsNullOrEmptyToVisibilityConverter" />
        </ResourceDictionary>
    </Page.Resources>

    <Grid>

        <Grid Background="{DynamicResource BackgroundColor}" Margin="20">

            <Grid.RowDefinitions>
                <RowDefinition Height=".7*"/>
                <RowDefinition Height="3*"/>
                <!-- المدخلات -->
                <RowDefinition Height="1.5*"/>
                <!-- الأزرار -->
                <RowDefinition Height="6*"/>
                <RowDefinition Height="*"/>
                <!-- الجدول -->
            </Grid.RowDefinitions>
            <userControls:TitleBar/>

            <!-- قسم المدخلات -->
            <StackPanel   FlowDirection="RightToLeft" Grid.Row="1" Orientation="Vertical" 
                          Margin="20 10 0 10 ">
                <StackPanel Orientation="Horizontal" Margin="5 5 0 5">

                    <TextBlock Text="اسم المنطقة الأساسية :   "  
                               Foreground="White" FontSize="24" 
                               VerticalAlignment="Center"  Margin="5 0"/>

                    <TextBox x:Name="txtRegionName" Width="180" Height="30"  Style="{StaticResource textboxx}"  
                             ToolTip="ادخل اسم المنطقه  "      />


                    
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin=" 5 5 0 10">

                    <TextBlock Text="  بداية الترقيم للمنطقة :  "  
                               Foreground="White" FontSize="24" 
                               VerticalAlignment="Center" Margin="5 0"/>

                    <TextBox x:Name="txtRegionStartNumber" Width="180" Height="30"  
                             ToolTip="ادخل بداية الترقيم"
                             Style="{StaticResource textboxx}"  
                             /> 
                    
                </StackPanel>
                
                <StackPanel Margin="0,0,40,0" Orientation="Horizontal" 
                            Grid.Column="1"  HorizontalAlignment="Right">

                    <Label Margin="0,0,0,0" Content=" بحث  : " 
                           VerticalAlignment="Center" Foreground="White"
                           FontSize="24"  Style="{StaticResource LabelStyle}"></Label>
                    
                    <TextBox x:Name="SearchByItemTextBox"
             Width="200"
             Height="30" Margin="0 0 0 0" 
             Style="{StaticResource textboxx}"                    
             VerticalAlignment="Center" ToolTip="ادخل اسم المنطقه  " 
             HorizontalAlignment="Center"
             TextChanged="SearchByItemFullNameBox_TextChanged"
             />
                    <Popup x:Name="SuggestionsPopup"
           Placement="Bottom"
           PlacementTarget="{Binding ElementName = SearchByItemTextBox}"
           StaysOpen="False"
           Width="100" >
                        <ListBox x:Name="SuggestionsItemsListBox" 
                 SelectionChanged="SuggestionsItemsListBoxForText_SelectionChanged"
                 Background="#52504F" Foreground="White"
                 />
                 <!--SelectionMode="Multiple"-->
                    </Popup>
                    
                </StackPanel>
                  
            </StackPanel>

            <!-- الأزرار -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" 
                        HorizontalAlignment="Center" Margin="10">
                <Button x:Name="editBtn" Visibility="Hidden" Style="{StaticResource UpdateBtn}"
Content="تعديل" Margin="10" Click="BtnEdit_Click"/>
  
                <Button Style="{StaticResource DeleteButtonn}"
                        Content="حذف"   Margin="10" Click="BtnDelete_Click"/>
               
                <Button Style="{StaticResource AddButtonn}"
                          Content="إضافة" FontSize="20"  Margin="10" Click="BtnAdd_Click"/>
           
            </StackPanel>
 
            <!-- الجدول -->
            <DataGrid Grid.Row="3"
                x:Name="dgMainRegions"
                SelectionChanged="dgMainRegions_SelectionChanged"
                AutoGenerateColumns="False"
                CanUserAddRows="False" 
                VerticalAlignment="Center" 
                IsReadOnly="False"
                HeadersVisibility="Column"
                FontSize="20"
                FlowDirection="RightToLeft"
                RowHeight="30"
                Background="#1B7F">

                <DataGrid.Columns>
                    <!-- الرقم المسلسل -->
                    <DataGridTextColumn Binding="{Binding Id}" Header="الرقم المسلسل" Width="*" >
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="TextAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                    <!-- المنطقة الأساسية -->
                    <DataGridTextColumn Binding="{Binding Name}" Header="اسم المنطقة الأساسية" Width="2*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="TextAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                    <!-- بداية الترقيم -->
                    <DataGridTextColumn Binding="{Binding StartNumbering}" Header="بداية الترقيم" Width="3*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="TextAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
                
            </DataGrid>
  
            <!--<Button Grid.Row="4" HorizontalAlignment="Left" 
                    Content="↩" FontSize="33" Style="{StaticResource triggerrr}"
                    Margin="71,0,0,1"  Height="55"
                    Click="BackBtn_Click" />-->

            <Button Grid.Row="4" HorizontalAlignment="Left"  Content="↩" FontSize="35" 
         Width="150" Height="55" Foreground="White"
         Style="{StaticResource triggerrr}" Margin="31,0,0,1"  
         Click="BackBtn_Click"/>
            <!--CommandParameter="DashBoardDoctor"-->


        </Grid>
    </Grid>
    
</Page>
