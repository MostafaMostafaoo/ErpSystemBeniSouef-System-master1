<Page x:Class="ErpSystemBeniSouef.Views.Pages.Regions.SubRegionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ErpSystemBeniSouef.Views.Pages.Products"
      xmlns:userControls="clr-namespace:ErpSystemBeniSouef.Views.UserControls"
      
      mc:Ignorable="d" 
      d:DesignHeight="950" d:DesignWidth="1000"
      Title="SubRegionPage">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../../Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="../../../Styles/TextBoxStyles.xaml"/>
                <ResourceDictionary Source="../../../Styles/TextBlockStyles.xaml"/>
                <ResourceDictionary Source="../../../Styles/TableStyles.xaml"/>
                <ResourceDictionary Source="../../../Styles/BorderStyles.xaml"/>

                <ResourceDictionary Source="../../../Styles/ComboBoxStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <FontFamily x:Key="MainFont">pack://application:,,,/Assets/#Roboto</FontFamily>
            <BooleanToVisibilityConverter x:Key="BoolToVis" />
            <BooleanToVisibilityConverter x:Key="StringIsNullOrEmptyToVisibilityConverter" />
        </ResourceDictionary>
    </Page.Resources>


    <Grid>
        <Grid Background="{DynamicResource BackgroundColor}" Margin="0 0 0 0">

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2.8*"/>
                <!-- المدخلات -->
                <RowDefinition Height="1.5*"/>
                <!-- الأزرار -->
                <RowDefinition Height="6*"/>
                <RowDefinition Height="1.4*"/>
                <!-- الجدول -->
            </Grid.RowDefinitions>
            <userControls:TitleBar/>


            <!-- قسم المدخلات -->
            <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0 1 0 0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 20">
                    <!--<TextBox x:Name="txtSubRegionName" Width="200" Height="25"/>-->
                    <ComboBox x:Name="cb_MainRegionName"  DisplayMemberPath="Name" 
                              SelectedValuePath="Id" Height="36" Width="170"
                              Background="#52504F"
                              Style="{StaticResource SmallerComboBox}"  
                             />
                    <TextBlock Text="  :  اسم المنطقة الأساسية" 
                      Foreground="White" FontSize="24" 
                      VerticalAlignment="Center" Margin="20 0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,0">
                    <TextBox x:Name="txtSbuRegionName" FlowDirection="RightToLeft"
                             Width="180" Style="{StaticResource textboxx}" Height="32"    />
                    <TextBlock Text=" :  اسم المنطقة الفرعيه   "  
                      Foreground="White" FontSize="24" 
                      VerticalAlignment="Center" Margin="5 0"/>
                </StackPanel>

                <StackPanel Margin="20,0,0,0" Orientation="Horizontal" Grid.Column="1">

                    <TextBox x:Name="SearchByItemTextBox"
                        Width="160" FlowDirection="RightToLeft" 
                        Height="30" Margin="0 0 0 0" ToolTip="ادخل اسم المنطقه  " 
                        Style="{StaticResource textboxx}"                    
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        TextChanged="SearchByItemFullNameBox_TextChanged"
                        />

                    <Popup x:Name="SuggestionsPopup"
Placement="Bottom"
PlacementTarget="{Binding ElementName = SearchByItemTextBox}"
StaysOpen="False"
Width="100"
Height="auto">
                        <ListBox x:Name="SuggestionsItemsListBox" 
      SelectionChanged="SuggestionsItemsListBoxForText_SelectionChanged"
      Background="#52504F" Foreground="White"  
      />
                    </Popup>

                    <Label Margin="0,0,0,0" Content="  : بحث  " 
                      VerticalAlignment="Center" Foreground="White"
                      FontSize="24"  Style="{StaticResource LabelStyle}">

                    </Label>


                </StackPanel>

            </StackPanel>

            <!-- الأزرار -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 0 0 0">

                <Button x:Name="editBtn" Visibility="Hidden" Style="{StaticResource UpdateBtn}"
                      Content="تعديل" Margin="10" Click="BtnEdit_Click"/>

                <Button Style="{StaticResource DeleteButtonn}"  Content="حذف"   Margin="10" Click="BtnDelete_Click"/>
                <Button Style="{StaticResource AddButtonn}"   Content="إضافة"   Margin="20" Click="BtnAdd_Click"/>
            </StackPanel>

            <!-- الجدول -->
            <DataGrid Grid.Row="3"  
                 x:Name="dgSubRegions"
                 AutoGenerateColumns="False"
                 CanUserAddRows="False"
                 CanUserDeleteRows="False"
                 IsReadOnly="False"
                 HeadersVisibility="Column"
                 FontSize="20"
                 RowHeight="32"
                 Background="White"
                 SelectionChanged="dgSubAreas_SelectionChanged"  >
                

                <DataGrid.Columns>

                    <DataGridTextColumn Binding="{Binding mainRegions.Name}" Header="المنطقة الأساسية لها" Width="2*">

                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="TextAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>

                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="FontSize" Value="23"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>


                    <DataGridTextColumn Binding="{Binding Name}" Header="المنطقة الفرعيه " Width="2*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="TextAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>

                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="FontSize" Value="23"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>

                    </DataGridTextColumn>


                    <DataGridTextColumn Binding="{Binding Id}" Header="الرقم المسلسل" Width="*" >
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="TextAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>

                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="FontSize" Value="23"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>


                </DataGrid.Columns>
            </DataGrid>


            <!--<Button Grid.Row="4" HorizontalAlignment="Left"   CommandParameter="DashBoardDoctor" 
                    Content="↩" FontSize="22" Style="{StaticResource triggerrr}"
                    Margin="21,10,0,1"  
                    Click="BackBtn_Click"/>-->

            <Button Grid.Row="4" HorizontalAlignment="Left"  Content="↩" FontSize="35" 
Width="150" Height="55" Foreground="White"
Style="{StaticResource triggerrr}" Margin="31,0,0,1"  
Click="BackBtn_Click"/>


        </Grid>

    </Grid>

</Page>
