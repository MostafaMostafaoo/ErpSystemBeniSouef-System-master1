<Page x:Class="ErpSystemBeniSouef.Views.Pages.RepresentativeAndCollector.UsersPaes.RepresentativePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ErpSystemBeniSouef.Views.Pages.RepresentativeAndCollector.UsersPaes"
      xmlns:userControls="clr-namespace:ErpSystemBeniSouef.Views.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RepresentativePage">



    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../../../Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="../../../../Styles/TextBoxStyles.xaml"/>
                <ResourceDictionary Source="../../../../Styles/TextBlockStyles.xaml"/>
                <ResourceDictionary Source="../../../../Styles/TableStyles.xaml"/>
                <ResourceDictionary Source="../../../../Styles/BorderStyles.xaml"/>

                <ResourceDictionary Source="../../../../Styles/BorderStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <FontFamily x:Key="MainFont">pack://application:,,,/Assets/#Roboto</FontFamily>
            <BooleanToVisibilityConverter x:Key="BoolToVis" />
            <BooleanToVisibilityConverter x:Key="StringIsNullOrEmptyToVisibilityConverter" />
        </ResourceDictionary>
    </Page.Resources>

    <Grid>

        <Grid Background="{DynamicResource BackgroundColor}" Margin=" 0 0 0 0">

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="1.5*"/>
                <!-- المدخلات -->
                <RowDefinition Height="1*"/>
                <!-- الأزرار -->
                <RowDefinition Height="5*"/>
                <RowDefinition Height="*"/>
                <!-- الجدول -->
            </Grid.RowDefinitions>
            <userControls:TitleBar/>

            <!-- قسم المدخلات -->
            <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Right" Margin="10 0 5 0 ">
                <StackPanel Orientation="Horizontal" Margin="0 10 10 5">
                    <TextBox x:Name="txtRepresentativeName"  FlowDirection="RightToLeft" Width="200" Height="31"  Style="{StaticResource textboxx}"  
                              />

                    <TextBlock Text="   : اسم المندوب       " 
               Foreground="White" FontSize="22" 
               VerticalAlignment="Center"  Margin="5 0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0 10 10 5">
                    <TextBox  x:Name="txtRepresentativeNumber" Width="200"  FlowDirection="RightToLeft" Height="31"  Style="{StaticResource textboxx}"  
               />

                    <TextBlock Text="   : رقم المستخدم        " 
                Foreground="White" FontSize="22" 
                 VerticalAlignment="Center"  Margin="5 0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="-500 -40 0 5">
                    <TextBox x:Name="txtPassword" Width="200"  FlowDirection="RightToLeft" Height="31"  Style="{StaticResource textboxx}"  
               />

                    <TextBlock Text="   :  باسورد المندوب         " 
         Foreground="White" FontSize="22" 
         VerticalAlignment="Center"  Margin="5 0"/>
                </StackPanel>


                <!-- بحث المورد -->
                <StackPanel Orientation="Horizontal" Margin="-900,-50,0,0" VerticalAlignment="Center">
                    <TextBox x:Name="SearchByItemTextBox"
                   Width="150" Height="33" ToolTip=" بحث ب اسم المندوب"
                   FlowDirection="RightToLeft"
                   Style="{StaticResource textboxx}"
                   TextChanged="SearchByItemTextBox_TextChanged"/>

                    <Popup x:Name="SuggestionsPopup"
                 Placement="Bottom"
                 PlacementTarget="{Binding ElementName=SearchByItemTextBox}"
                 StaysOpen="False"
                 Width="100"
                 Height="Auto">
                        <ListBox x:Name="SuggestionsItemsListBox"
                       SelectionChanged="SuggestionsItemsListBoxForText_SelectionChanged"
                       Background="White"/>
                    </Popup>
                    <Label Content=" : بحث "
                 VerticalAlignment="Center"
                 Foreground="White"
                 FontSize="22"
                 Margin="5,0,0,0"/>
                </StackPanel>


            </StackPanel>


            <!-- الأزرار -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0">
                <Button x:Name="editBtn" Visibility="Hidden" Style="{StaticResource UpdateBtn}"
                   Content="تعديل" Margin="10" Click="BtnEdit_Click"/>
                <Button Style="{StaticResource DeleteButtonn}"
                   Content="حذف"   Margin="10" Click="BtnDelete_Click"/>
                <Button Style="{StaticResource AddButtonn}"
                   Content="إضافة"  Margin="10" Click="BtnAdd_Click"/>
            </StackPanel>

            <!-- الجدول -->
            <DataGrid Grid.Row="3"
      x:Name="dgRepresentatives"
      SelectionChanged="dgCollectors_SelectionChanged"
      AutoGenerateColumns="False"
      CanUserAddRows="False"
      CanUserDeleteRows="False"
      IsReadOnly="False"
      HeadersVisibility="Column"
      FontSize="21" 
      RowHeight="35" Width="1200"
      Background="#1B7F" 
                   FlowDirection="RightToLeft">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Id}" Header="الرقم المسلسل" Width="*" >


                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="FontSize" Value="23"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>

                        
                    </DataGridTextColumn>

                    <DataGridTextColumn Binding="{Binding Name}" Header=" اسم المندوب " Width="2*" >


                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="FontSize" Value="23"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>

                        
                    </DataGridTextColumn>

                    <DataGridTextColumn Binding="{Binding UserNumber}" Header=" رقم المستخدم " Width="2*" >


                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="FontSize" Value="23"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>

                    </DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding Password}" Header=" الرقم السري للمندوب  " Width="2*" >

                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="FontSize" Value="23"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>

                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>




            <!--<Button Grid.Row="4" HorizontalAlignment="Left"   CommandParameter="DashBoardDoctor" 
               Content="↩" FontSize="22" Style="{StaticResource triggerrr}"
               Margin="21,30,0,1"  
               Click="BackBtn_Click"/>-->


            <Button Grid.Row="4" HorizontalAlignment="Left"  Content="↩" FontSize="35" 
         Width="150" Height="55" Foreground="White"
         Style="{StaticResource triggerrr}" Margin="31,0,0,1"  
         Click="BackBtn_Click"/>

            

        </Grid>
    </Grid>
    

</Page>
