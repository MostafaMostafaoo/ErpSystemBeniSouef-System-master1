<Page x:Class="ErpSystemBeniSouef.Views.StartPageBeforeLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="500" d:DesignWidth="800"
      Title="StartPageBeforeLogin"
      Background="#F4F6F8">

    <Grid>
        <!-- خلفية بلون ناعم -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#394867" Offset="0"/>
                <GradientStop Color="#F4F6F8" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- المحتوى في النص -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" 
                     >
            <!-- شعار -->
            <Image Source="/Assets/LogoOfLogin.jpeg" Width="300" Height="170" Margin="0,0,0,20"/>

            <!-- عنوان -->
            <TextBlock Text=" سيستم الحسابات"
                       FontSize="32"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0,0,0,10"/>

            <!-- Sub Title -->
            <TextBlock Text=" برجاء الانتظار جاري التحميل ..."
                       FontSize="18"
                       Foreground="#EAEAEA"
                       Margin="0,0,0,20"/>

            <!-- ProgressRing أو ProgressBar -->
            <ProgressBar Width="300"
                         Height="8"
                         IsIndeterminate="True"
                         Foreground="#FFD700"
                         Background="White"
                         BorderThickness="0" />
        </StackPanel>
    </Grid>
</Page>
