<UserControl x:Class="ErpSystemBeniSouef.Views.UserControls.TitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ErpSystemBeniSouef.Views.UserControls"
          
             Background="#222222" BorderBrush="#171717" BorderThickness="2"
             MouseLeftButtonDown="UserControl_MouseLeftButtonDown"
             mc:Ignorable="d" 
             Height="40" d:DesignWidth="800">
    <Grid>
        <!-- Title Bar -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <!-- Minimize Button -->
            <Button x:Name="btnMinimize" Margin="0 0 30 0" Content="_" Style="{DynamicResource TitleBarButton}" Click="BtnMinimize_Click"/>

            <!-- Close Button -->
            <Button x:Name="btnClose" Content="X" Style="{DynamicResource CloseButton}" Click="BtnClose_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
